# -*- shell-script -*-

export PS1="$ "
export HISTFILE=/tmp/history

rm -f $HISTFILE

add_history ()
{
    echo "$@" >> $HISTFILE
}

terminal ()
{
    exec \
        gnome-terminal \
        --window \
        --geometry=+100+100 \
        --hide-menubar \
        --disable-factory \
        -e '/bin/bash --norc' \
        "$@"
}

# -*- shell-script -*-

export PS1="$ "
export HISTFILE=/tmp/history

rm -f $HISTFILE

add_history ()
{
    echo "$@" >> $HISTFILE
}

terminal ()
{
    gnome-terminal \
        --window \
        --geometry=+100+100 \
        --hide-menubar \
        --title='Tech Talk PSE Simple example' \
        -e '/bin/bash --norc'
}
